{
	"name": "Remove iFrame",
	"description": "Removes iframe from list of sites, otherwise click on icon to remove. For more details: https://github.com/JasonL888/removeiFrame",
	"version": "1.3",
	"permissions": [ "activeTab"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Remove iFrame",
		"default_icon": {
			"38": "Window-Delete-32.png"
		}
	},
	"content_scripts": [ 
	  {
	  	"matches": [
	  		"https://thepiratebay.am/*",
	  	    "https://thepiratebay.cr/*", 
	  	    "https://thepiratebay.gd/*",
	  	    "https://thepiratebay.la/*",
	  	    "https://thepiratebay.mn/*",
	  	    "https://thepiratebay.org/*",
	  	    "https://thepiratebay.vg/*",
	  	    "http://www.mp4ba.com/*",
	  	    "http://imgclover.com/*",
	  	    "http://www.ichacha.net/*"
	  	    ],
	  	"js": ["removeiFrame.js"]
	  }  
	],
	"icons": {
		"128": "Window-Delete-128.png"
	},
	"manifest_version": 2
}