{
	"name": "Remove iFrame",
	"description": "Automatically removes all iFrame",
	"version": "1.2",
	"permissions": [ "https://*/", "activeTab"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Remove iFrame",
		"default_icon": {
			"38": "Window-Delete-32.png"
		}
	},
	"content_scripts": [ 
	  {
	  	"matches": [
	  	    "http://www.nytimes.com/*",
	  	    "http://www.ichacha.net/*"
	  	    ],
	  	"js": ["removeiFrame.js"]
	  }  
	],
	"manifest_version": 2
}